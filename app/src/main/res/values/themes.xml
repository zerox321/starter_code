<resources>
    <!-- Base application theme. -->
    <style name="Theme.baseProject" parent="Theme.Base">
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/shimmer</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlHighlight">@color/primary_10</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/font</item>
        <item name="android:fontFamily">@font/font</item>
    </style>




</resources>